{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": [
            "es2016",
            "es2017",
            "dom",
            "esnext.asynciterable",
            "esnext.array"
        ],
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "types": [
            "cypress",
            "node"
        ]
    },
    "include": [
        "specs",
        "support"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
